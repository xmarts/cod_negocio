<odoo>
    <data>
        <template id="inherit_peso_to_sale_order" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@id='informations']" position="inside">
                <div t-if="doc.peso" class="col-auto mw-100 mb-2">
                    <strong>Peso en KG:</strong>
                    <p class="m-0" ><span t-field="doc.peso" /> KG</p>
                </div>
            </xpath>
        </template>
    </data>
</odoo>